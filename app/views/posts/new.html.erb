<div class = "post_register_page">
  <div class = "post_register_title">
    <%= image_tag "https://icooon-mono.com/i/icon_15519/icon_155191_64.png", class: "post_register_logo" %>
    <h2>お気に入り店舗登録</h2>
  </div>

<%= form_with model: @post do |f| %>
  <ul class="post_register_field">
    <li class="post_register_file_field">
      <%= f.label :ramen_image, "ラーメン画像", class: "post_register_label" %>
      <%= f.file_field :ramen_image, class: "post_register_image" %>
    </li>
    <li>
      <%= f.label :shop_name, "店舗名", class: "post_register_label" %>
      <%= f.text_field :shop_name, placeholder: "店舗名", class: "post_register_form" %>
    </li>
    <li>
      <%= f.label :address, "住所", class: "post_register_label" %>
      <%= f.text_field :address, placeholder: "店舗住所", class: "post_register_form" %>
    </li>
    <li>
      <%= f.label :visited_date, "来店日", class: "post_register_label" %>
      <%= f.date_field :visited_date, placeholder: "年/月/日", class: "post_register_form" %>
    </li>
    <li>
      <%= f.label :shop_score, "ポイント", class: "post_register_label" %>
      <%= f.text_field :shop_score, placeholder: "100点満点", class: "post_register_form" %>
    </li>
    <li class="post_register_memo_field">
      <%= f.label :shop_memo, "メモ", class: "post_register_label" %>
      <%= f.text_area :shop_memo, placeholder: "ライス無料、かため濃いめ等", class: "post_register_area" %>
    </li>
  </ul>

  <div class="post_register_actions">
    <%= f.submit "登録", class: "post_register_button" %>
  </div>
<% end %>
  <div class="post_register_actions">
    <%= link_to "お気に入り店舗リスト", posts_path, class: "post_index_link" %>
  </div>
</div>
