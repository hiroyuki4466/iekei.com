<div class ="sign_up_page">
  <div class = "sign_up_title">
    <%= image_tag "https://icooon-mono.com/i/icon_14440/icon_144401_64.png", class: "sign_up_logo" %>
    <h2>麺バー登録</h2>
  </div>
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <ul class="sign_up_field">
    <li>
      <%= f.label :ユーザーネーム, class: "sign_up_label" %>
      <%= f.text_field :name, autocomplete: "name" %>
    </li>
    <li>
      <%= f.label :メールアドレス, class: "sign_up_label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </li>
    <li>
      <%= f.label :パスワード, class: "sign_up_label" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </li>
    <li>
      <%= f.label :パスワード（確認用）, class: "sign_up_label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </li>
  </ul>

  <div class="sign_up_actions">
    <%= f.submit "新しいアカウントを作成", class: "sign_up_button" %>
  </div>
<% end %>
  <div class="sign_up_actions">
    <%= link_to "アカウントをお持ちの方はログイン", '/users/sign_in', class: "sign_in_link" %>
  </div>
</div>
